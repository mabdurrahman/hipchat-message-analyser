<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- default state -->
    <item android:state_window_focused="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/view_corner" />
            <solid android:color="@color/edittext_default_normal" />
            <padding android:bottom="@dimen/edittext_vertical_padding"
                android:left="@dimen/edittext_horizontal_padding"
                android:right="@dimen/edittext_horizontal_padding"
                android:top="@dimen/edittext_vertical_padding" />
        </shape>
    </item>

    <!-- disabled state -->
    <item android:state_window_focused="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/view_corner" />
            <solid android:color="@color/edittext_default_disabled" />
            <padding android:bottom="@dimen/edittext_vertical_padding"
                android:left="@dimen/edittext_horizontal_padding"
                android:right="@dimen/edittext_horizontal_padding"
                android:top="@dimen/edittext_vertical_padding" />
        </shape>
    </item>

    <!-- selected state -->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/view_corner" />
            <solid android:color="@color/edittext_default_selected" />
            <padding android:bottom="@dimen/edittext_vertical_padding"
                android:left="@dimen/edittext_horizontal_padding"
                android:right="@dimen/edittext_horizontal_padding"
                android:top="@dimen/edittext_vertical_padding" />
        </shape>
    </item>

    <!-- default state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/view_corner" />
            <solid android:color="@color/edittext_default_normal" />
            <padding android:bottom="@dimen/edittext_vertical_padding"
                android:left="@dimen/edittext_horizontal_padding"
                android:right="@dimen/edittext_horizontal_padding"
                android:top="@dimen/edittext_vertical_padding" />
        </shape>
    </item>

    <!-- disabled state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/view_corner" />
            <solid android:color="@color/edittext_default_disabled" />
            <padding android:bottom="@dimen/edittext_vertical_padding"
                android:left="@dimen/edittext_horizontal_padding"
                android:right="@dimen/edittext_horizontal_padding"
                android:top="@dimen/edittext_vertical_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/view_corner" />
            <solid android:color="@color/edittext_default_disabled" />
            <padding android:bottom="@dimen/edittext_vertical_padding"
                android:left="@dimen/edittext_horizontal_padding"
                android:right="@dimen/edittext_horizontal_padding"
                android:top="@dimen/edittext_vertical_padding" />
        </shape>
    </item>
</selector>
